# Database Configuration
# Format: postgresql://username:password@hostname:port/database_name
DATABASE_URL=postgresql://username:password@localhost:5432/media_contacts

# NextAuth Configuration
# For development: http://localhost:3000
# For production: https://your-production-domain.com
AUTH_URL=http://localhost:3000

# NextAuth Secret (REQUIRED)
# Generate a new secret with: npx auth secret
# or use: openssl rand -base64 32
AUTH_SECRET=your_auth_secret_here

# Trust proxy headers when running behind a proxy
AUTH_TRUST_HOST=true

# AI Services Configuration
# Add your AI service API keys here

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_ORGANIZATION=org-your-organization-id
OPENAI_RATE_LIMIT_REQUESTS_PER_MINUTE=60
OPENAI_RATE_LIMIT_TOKENS_PER_MINUTE=100000
OPENAI_MAX_DAILY_SPEND=100
OPENAI_MAX_MONTHLY_SPEND=3000

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_RATE_LIMIT_REQUESTS_PER_MINUTE=50
ANTHROPIC_MAX_DAILY_SPEND=50
ANTHROPIC_MAX_MONTHLY_SPEND=1500
ANTHROPIC_ENABLE_CONTEXT_CACHING=true

# Exa API Configuration
EXA_API_KEY=your-exa-api-key-here
EXA_BASE_URL=https://api.exa.ai
EXA_SEARCH_QUOTA_PER_MONTH=10000
EXA_RATE_LIMIT_REQUESTS_PER_MINUTE=60
EXA_MAX_RESULTS=10
EXA_COST_PER_MONTH=100

# Firecrawl Configuration
FIRECRAWL_API_KEY=fc-your-firecrawl-api-key-here
FIRECRAWL_BASE_URL=https://api.firecrawl.dev
FIRECRAWL_RATE_LIMIT_REQUESTS_PER_MINUTE=100
FIRECRAWL_TIMEOUT_SECONDS=30
FIRECRAWL_MAX_PAGES=10
FIRECRAWL_QUOTA_PER_MONTH=5000
FIRECRAWL_COST_PER_MONTH=50

# AI Services Global Configuration
AI_ENABLE_CACHING=true
AI_CACHE_TTL_LOCAL_SECONDS=3600
AI_CACHE_TTL_COLD_SECONDS=86400
AI_ENABLE_METRICS=true
AI_ENABLE_AUDIT_LOGGING=true
AI_LOG_LEVEL=info

# Security Configuration
AI_ENCRYPTION_KEY=your-32-character-hex-encryption-key-here
