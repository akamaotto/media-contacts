const countryOptions: CountryOption[] = [
  { code: 'US', name: 'United States', flag: 'ðŸ‡ºðŸ‡¸', region: 'Americas', popular: true },
  { code: 'GB', name: 'United Kingdom', flag: 'ðŸ‡¬ðŸ‡§', region: 'Europe', popular: true },
